<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.20/owo-ui.xsd">
    <components>
        <flow-layout direction="vertical">
            <children>
                <flow-layout direction="vertical">
                    <children>
                        <label>
                            <color>red</color>
                            <text>HeadBrowser encountered an issue. Please report this bug!</text>
                            <margins>
                                <all>5</all>
                            </margins>
                        </label>
                        
                        <box>
                            <fill>true</fill>
                            <sizing>
                                <horizontal method="fill">80</horizontal>
                                <vertical method="fill">1</vertical>
                            </sizing>
                            <color>dark-gray</color>
                        </box>

                        <scroll direction="horizontal">
                            <flow-layout direction="vertical" id="lines">
                                <children />
                            </flow-layout>
                            <sizing>
                                <vertical method="fill">60</vertical>
                                <horizontal method="fill">80</horizontal>
                            </sizing>
                            <padding>
                                <vertical>5</vertical>
                            </padding>
                        </scroll>

                        <flow-layout direction="horizontal">
                            <children>
                                <button id="copy">
                                    <text>Copy to clipboard</text>

                                    <margins>
                                        <right>5</right>
                                    </margins>
                                </button>

                                <button id="issues">
                                    <text>Create bug report (GitHub Issues)</text>
                                </button>
                            </children>
                        </flow-layout>
                    </children>

                    <padding>
                        <all>20</all>
                    </padding>

                    <surface>
                        <panel dark="true"/>
                    </surface>

                </flow-layout>
            </children>

            <vertical-alignment>center</vertical-alignment>
            <horizontal-alignment>center</horizontal-alignment>

            <surface>
                <options-background />
            </surface>
        </flow-layout>
    </components>
</owo-ui>
